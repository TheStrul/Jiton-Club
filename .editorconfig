# EditorConfig is awesome: https://EditorConfig.org
root = true

# All files
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# Code files
[*.{cs,csx,vb,vbx}]
indent_style = space
indent_size = 4
charset = utf-8

# Web files
[*.{js,jsx,ts,tsx,html,css,scss,json}]
indent_style = space
indent_size = 2
charset = utf-8

# Hebrew and Unicode resource files
[*.{he.js,ar.js}]
charset = utf-8
indent_style = space
indent_size = 2

# SQL files (Hebrew content needs BOM)
[*.sql]
charset = utf-8-bom
indent_style = space
indent_size = 4

# XML project files
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
indent_style = space
indent_size = 2
charset = utf-8

# XML config files
[*.{props,targets,ruleset,config,nuspec,resx,vsixmanifest,vsct}]
indent_style = space
indent_size = 2
charset = utf-8

# Markdown
[*.md]
trim_trailing_whitespace = false
charset = utf-8

# PowerShell
[*.ps1]
charset = utf-8
indent_style = space
indent_size = 4